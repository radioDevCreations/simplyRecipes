{
    "include": [
        "./src/**/*",
        "custom.d.ts" //this setting makes typescript accept svg files
, "src/components/.tsx"    ],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "dom",
            "es2017"
        ],
        // "allowJs": true,
        // "checkJs": true,
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "skipLibCheck": true,
        "moduleResolution": "node",

    }
}